<h1>User Profiles</h1>

{{#if recent}}
    <h2>Recent users profiles: </h2>
    <ul>
        {{#each recent}}
            <li><a href="/users/{{username}}">{{username}}</a></li>
        {{/each}}
    </ul>
{{/if}}

<p><a href="/auth/login">Login</a> to update your profile</p>
<p><a href="/auth/register">Register an account</a></p>